@model LargeDataSetMvc.Utils.PaginatedList<LargeDataSetMvc.Model.CurrentEmployee>


@{
    ViewData["Title"] = "Current Employees";
}

<h2 class="text-center">Current Employees</h2>

<table class="table">
    <thead>
        <tr>
            <th>Emp No</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Title</th>
           </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmpNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                </tr>
        }
    </tbody>
</table>


@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index" class="btn btn-default btn-lg @prevDisabled" asp-route-page="@(Model.PageIndex - 1)">Previous</a>
<a asp-action="Index" class="btn btn-default btn-lg @nextDisabled" asp-route-page="@(Model.PageIndex + 1)">Next</a>




